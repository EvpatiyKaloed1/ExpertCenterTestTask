@model GetAllPriceListsViewModel
@{
}

<table>
    <tr>
        <th>Номер</th>
        <th>Название прайс-листа</th>
        <th></th>
    </tr>
 
    @foreach(var item in Model.Items)
    {
        <tr>
            <td>@item.Number</td>
            <td><a asp-action="GetPriceList" asp-route-Id="@item.Id">@item.Name</a></td>
            <td>
                <form asp-controller="PriceList" asp-action="DeletePriceList" asp-route-id="@item.Id" method="post">
                    <input type="submit" class="btn btn-danger" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>




